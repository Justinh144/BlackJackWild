<div class="main_container">
        <div class="top_container">
            <div class="menu_container">
                <div class="menu">
                    <div class="menu_btn" id="home_btn"></div>
                    <div class="menu_btn" id="account_btn"></div>
                    <div class="menu_btn" id="deck_btn"></div>
                    <div class="menu_btn" id="reload_chips_btn"></div>
                    <div class="menu_btn" id="log_out_btn"></div>
                </div>
            </div>
            <div class="dealer_container">
                <div class="dealer_card" id="dealer_card_1"></div>
                <div class="dealer_card" id="dealer_card_2"></div>
                <div class="dealer_card" id="dealer_card_3"></div>
                <div class="dealer_card" id="dealer_card_4"></div>
                <div class="dealer_card" id="dealer_card_5"></div>
            </div>
