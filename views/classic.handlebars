                    <button class="chips" id="chips_500" value="500"></button>
                    <button class="chips" id="chips_1000" value="1000"></button>
                    <button class="chips" id="chips_2500" value="2500"></button>
                </div>
            </div>    
            <div class="player_container">
                <div class="player_center">
                    <div class="player_card" id="player_card_1"></div>
                    <div class="player_card" id="player_card_2"></div>
                    <div class="player_card" id="player_card_3"></div>
                    <div class="player_card" id="player_card_4"></div>
                    <div class="player_card" id="player_card_5"></div>
                </div>  
            </div>
            <div class="bet_container">
                <div class="menu">
                    <button class="bet_btn" id="deal_btn">Deal</button>
                    <button class="bet_btn" id="hit_btn">Hit</button>
                    <button class="bet_btn" id="stay_btn">Stay</button>
                    <button class="bet_btn" id="split_btn">Split</button>
                    <button class="bet_btn" id="doubledn_btn">Double Down</button>
                </div>
            </div>

        </div>
    </div>

